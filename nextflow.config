docker.runOptions = '-u $(id -u):$(id -g)'
docker.enabled = true

params {
referenceAnnotation = "$projectDir//data/reference/pfal3D7_new_reformatted.gtf"
reference = "$projectDir/data/reference/pfal3D7.fasta"
reads = "$projectDir/data/fastq/"
platform = "PacBio-Sequel2"
build = "PlasmoDB"
annotationName = "PlasmoDB_annot"
results = "Results"
}

process {
    withName:minimapMapping {
        container = 'staphb/minimap2'
    }
     withName:transcriptClean {
        container = 'biocontainers/transcriptclean:v2.0.2_cv1'
    }
    withName:annotator {
        container = 'talon'
    }
    withName:genrateConfig {
        container = 'talon'
    } 
    withName:talonLabelReads {
        container = 'talon'
    }
    withName:initiateDatabase {
        container = 'talon'
    }
    withName:talonSummarize {
        container = 'talon'
    }

    withName:talonFilterTranscripts {
        container = 'talon'
    }
}

