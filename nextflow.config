docker.runOptions = '-u $(id -u):$(id -g)'
docker.enabled = true

params {
referenceAnnotation = "$projectDir/data/Toxo/reference/tgonME49_rename_reformatted.gtf"
reference = "$projectDir/data/Toxo/reference/ToxoDB-61_TgondiiME49_Genome_modified.fasta"
reads = "$projectDir/data/Toxo/fastq/"
platform = "Nanopore"
build = "ToxoDB"
annotationName = "ToxoDB_annot"
results = "Results"
database = "$projectDir/database/talon.db"
}

process {
    withName:minimapMapping {
        container = 'staphb/minimap2'
    }
     withName:transcriptClean {
        container = 'talon1'
    }
    withName:annotator {
        container = 'talon1'
    }
    withName:genrateConfig {
        container = 'talon1'
    } 
    withName:talonLabelReads {
        container = 'talon1'
    }
    withName:initiateDatabase {
        container = 'talon1'
    }
    withName:talonSummarize {
        container = 'talon1'
    }

    withName:talonFilterTranscripts {
        container = 'talon1'
    }
    withName:transcriptAbundanceNoFilter {
        container = 'talon1'
    }
    withName:createGtf {
        container = 'talon1'
    }
    withName:transcriptAbundance {
        container = 'talon1'
    }
    
    
} 

